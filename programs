<script>
document.addEventListener("DOMContentLoaded", function () {
    const navBlock = document.querySelector(".navblock");

    window.addEventListener("scroll", function () {
        if (window.scrollY > window.innerHeight * 0.7) {
            navBlock.classList.add("scrolled-nav");
        } else {
            navBlock.classList.remove("scrolled-nav");
        }
    });
});
</script>
<!-- Number Animations -->
    <script>
       $(document).ready(function() {
            function isInViewport(element) {
                let rect = element.getBoundingClientRect();
                return (
                    rect.top >= 0 &&
                    rect.left >= 0 &&
                    rect.bottom <= (window.innerHeight || document.documentElement.clientHeight) &&
                    rect.right <= (window.innerWidth || document.documentElement.clientWidth)
                );
            }

            let animatedNumbers = new Set();

            function animateNumber($element) {
                if (animatedNumbers.has($element[0])) return; // Prevent multiple triggers

                animatedNumbers.add($element[0]); // Mark as animated
                let originalNumber = $element.text().trim(); // Store the original number
                let duration = 100; // 1 seconds
                let interval = 100; // Change every 100ms

                let animation = setInterval(() => {
                    let randomDigit = Math.floor(Math.random() * 10);
                    $element.text(randomDigit);
                }, interval);

                setTimeout(() => {
                    clearInterval(animation);
                    $element.text(originalNumber); // Restore the original number
                }, duration);
            }

            function checkNumbersInView() {
                $(".big-number").each(function() {
                    if (isInViewport(this)) {
                        animateNumber($(this));
                    }
                });
            }

            $(window).on("scroll", checkNumbersInView);
            checkNumbersInView(); // Run on page load in case elements are already visible
        });
    </script>
<!--Menu Animation Script -->
<script>
$(document).ready(function() {
    $(".open-menu").click(function(event) {
        event.stopPropagation(); // Prevent immediate close
        $(".menu-overlay")
            .css("display", "flex")
            .animate({ right: "0%" }, 300, function() {
                // Enable outside click detection AFTER animation is complete
                $(document).on("mouseup", outsideClickHandler);
            });
    });

    $(".menu-overlay a, .closebutton").click(function() {
        closeMenu();
    });

    function closeMenu() {
        $(".menu-overlay").animate({ right: "-100%" }, 300, function() {
            $(this).css("display", "none");
            $(document).off("mouseup", outsideClickHandler); // Remove outside click listener
        });
    }

    function outsideClickHandler(event) {
        let menu = $(".menu-overlay");
        if (!menu.is(event.target) && menu.has(event.target).length === 0) {
            closeMenu();
        }
    }
});
</script>
<!-- Location Finder Application -->
<script>
$(document).ready(function() {
    let activeInfoBox = $('.info-holder---locations'); // Default box on load

    $('.pincontain').hover(function() {
        let pinClass = $(this).attr('class').split(' ')[1]; // Get second class
        let targetInfoBox = $('.' + pinClass + '-detail'); // Match to the corresponding info box

        if (targetInfoBox.length && targetInfoBox[0] !== activeInfoBox[0]) {
            let newHeight = targetInfoBox.css('display', 'block').outerHeight(); // Get natural height
            
            // Hide the current active box
            activeInfoBox.stop().animate({ height: "0px", opacity: 0 }, 300, function() {
                $(this).css("display", "none");
            });

            // Set target box to the correct height before animating
            targetInfoBox.css({ height: "0px", opacity: 0, display: "block" })
                         .stop().animate({ height: newHeight + "px", opacity: 1 }, 300, function() {
                             $(this).css("height", "auto"); // Reset to auto after animation
                         });

            activeInfoBox = targetInfoBox; // Update active box
        }
    });
});
</script>
<script>
$(document).ready(function() {
    $('.tooltip').each(function() {
        var $tooltip = $(this);
        var $tooltipContent = $tooltip.find('.tooltip-contain');

        // Prevent default anchor behavior
        $tooltip.on('click', function(event) {
            event.preventDefault(); // Stops the default action of the anchor tag
            event.stopPropagation(); // Prevents event from bubbling up

            var isVisible = $tooltipContent.is(':visible');
            
            // Close all other tooltips
            $('.tooltip-contain').fadeOut(200).removeData('clicked');

            if (!isVisible) {
                $tooltipContent.stop(true, true).fadeIn(200).data('clicked', true);
            } else {
                $tooltipContent.stop(true, true).fadeOut(200).removeData('clicked');
            }
        });

        // Show on hover
        $tooltip.on('mouseenter', function() {
            $tooltipContent.stop(true, true).fadeIn(200);
        });

        // Hide on leave
        $tooltip.on('mouseleave', function() {
            if (!$tooltipContent.data('clicked')) {
                $tooltipContent.stop(true, true).fadeOut(200);
            }
        });
    });

    // Close tooltips if clicking outside
    $(document).on('click', function() {
        $('.tooltip-contain').fadeOut(200).removeData('clicked');
    });

    // Prevent closing when clicking inside tooltip content
    $('.tooltip-contain').on('click', function(event) {
        event.stopPropagation();
    });
});
</script></body></html>